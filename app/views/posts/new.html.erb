<h1>新規投稿</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>

  <label>画像</label><br>
  <%= f.file_field :image, accept: "image/*" %><br>

  <label>タイトル</label><br>
  <%= f.text_field :title %><br>

  <label>本文</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit '投稿' %>
<% end %>