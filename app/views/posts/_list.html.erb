<!--投稿-->
  <% posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= image_tag post.get_image(300, 300), class: "card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image(100, 100), class: "mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to post.title, post_path(post.id), class: "text_dark"; %>
          </p>
          <p class="card-text"><%= post.body %></p>
          <span>By <%= post.user.name %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <% if posts.count == 0 %>
    <div class="text-center">検索結果はありません</div>
  <% end %>
