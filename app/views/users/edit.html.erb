<!--プロフィール編集-->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザ名" %>
          </div>
          <%= f.text_area :bio, class: "form-control", rows: "3", placeholder: "自己紹介" %>
          <hr>
          <%= f.submit '保存',class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>