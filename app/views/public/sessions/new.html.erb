<!--ログイン-->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ログイン</h5>

      <div class="form-body px-4 pb-4">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field input-group mb-3 mt-4">
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
          </div>
          <div class="field input-group mb-3 mt-4">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
          </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              </div>
            <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-block btn-info mt-3" %>
          </div>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>