<!--いいねボタン-->
  <% if post.favorited_by?(current_user) %>
    <span>
      <%= link_to post_favorite_path(post), method: :delete, remote: true, data: {"turbolinks" => false } do %>
        <i class="fa-solid fa-star"><%= post.favorites.count %></i>
      <% end %>
    </span>
    <% else %>
    <span>
      <%= link_to post_favorite_path(post), method: :post, remote: true, data: {"turbolinks" => false } do %>
        <i class="fa-regular fa-star"><%= post.favorites.count %></i>
      <% end %>
    </span>
  <% end %>