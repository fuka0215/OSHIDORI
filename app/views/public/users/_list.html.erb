<!-- ユーザーの一覧部分 -->
<% users.each do |user| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
    <div class="row mx-3">
      <div class="col-md-3">
        <%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image(100, 100), class: "mt-2 rounded-circle"; %>
        <% end %>
      </div>
      <div class="col-md-9">
          <h4 class="card-title">
            <%= link_to user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </h4>
          <p class="card-text"><%= user.bio %></p>
          <p id="follow_btn_<%= user.id %>"><%= render "public/relationships/btn", user: user, options: { class: ""} %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>