<div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">
        <% if post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= post.errors.count %>件のエラーが発生しました
            </h6>
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: post, local: true do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100", autocomplete: "off" %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :title, id: "Title", class: "form-control", placeholder: "タイトル", autocomplete: "off" %>
          </div>
          <div>
          <%= f.text_area :body, id: "Body", class: "form-control", rows: "3", placeholder: "本文", autocomplete: "off" %>
          </div>
          <div>
          <%= f.text_field :address, id: "Address", class: "form-control", placeholder: "撮影地" %>
          </div>
          <hr>
          <%= f.submit '投稿',class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>