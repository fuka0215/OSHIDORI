<!--投稿詳細-->

<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= image_tag @post.get_image(300, 300), class: "card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@post.user.id) do %>
            <%= image_tag @post.user.get_profile_image(100, 100), class: "rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to @post.title, post_path(@post.id), class: "text_dark"; %>
          </p>
          <p class="card-text"><%= @post.body %></p>
          <p>投稿日:<%= @post.created_at.strftime('%y/%m/%d') %></p>
          <span>By <%= @post.user.name %></span>
          <div>
            <% if @post.favorited_by?(current_user) %>
              <p>
                <%= link_to post_favorite_path(@post), method: :delete do %>
                  <i class="fa-solid fa-star"></i><%= @post.favorites.count %>いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to post_favorite_path(@post), method: :post do %>
                  <i class="fa-regular fa-star"></i><%= @post.favorites.count %>いいね
                <% end %>
              </p>
            <% end %>
          </div>
          <div>
            <p><i class="fa-regular fa-comment"></i><%= @post.post_comments.count %>コメント</p>
            <% @post.post_comments.each do |post_comment| %>
            <div class="row">
              <%= image_tag post_comment.user.get_profile_image(50, 50) %>
              <%= link_to post_comment.user.name, user_path(post_comment.user.id) %>
              <%= post_comment.comment %>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
              <% end %>
            </div>
            <% end %>
          </div>

            <% if @post_comment.errors.any? %>
              <ul class="alert alert-danger" role="alert">
              <h6 class="alert-heading">
                <%= @post_comment.errors.count %>件のエラーが発生しました
              </h6>
                <% @post_comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>

          <div class="form-body my-1">
            <%= form_with model: [@post, @post_comment] do |f| %>
            <div class="form-group">
              <%= f.text_area :comment, class: "form-control", placeholder: "コメント" %>
            <div class="text-right my-1">
              <%= f.submit "送信", class: "btn btn-sm btn-info" %>
            <% end %>
            </div>
            </div>
          </div>

          <% if @post.user == current_user %>
            <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-block btn-success" %>
            <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-block btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>