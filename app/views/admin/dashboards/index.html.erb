<!--管理者ダッシュボード-->

<!--ユーザー一覧-->
<div class="container-fluid py-5">
  <div class="row">
    <h1 class="mx-auto">全ユーザーリスト</h1>
  </div>
  <% @users.each do |user| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="row mx-3">
      <div class="col-md-3">
          <%= image_tag user.get_profile_image(100, 100) %>
      </div>
      <div class="col-md-9">
        <div class="card-body">
          <p class="card-title"><%= link_to user.name, admin_user_path(user) %></p>
          <p class="card-text"><%= user.email %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
